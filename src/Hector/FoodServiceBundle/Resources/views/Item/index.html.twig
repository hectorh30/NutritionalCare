{% extends '::base.html.twig' %}

{% set menu = 'home' %}
{% set section = 'item' %}

{% block body %}

<section class="grid_12">
<div class="block-border">

<form class="block-content form" action="#" method="post" name="meal_list_form">
  <h1>Listado alimentos</h1>
  <div class="block-controls">
  </div>

  {% if app.session.hasFlash('notice') %}
  <p class="message success no-margin">
    {{ app.session.flash('notice') }}
    <span class="close-bt"></span>
  </p>
  {% endif %}

  <div class="no-margin">
    <table class="table" cellspacing="0">
      <thead>
	<tr>
	  <th scope="col">Nombre</th>
	  <th scope="col">Temp. Min.</th>
	  <th scope="col">Temp. Max.</th>
	  <th scope="col">Ultima medici√≥n</th>
	  <th scope="col">Tiempo de comida</th>
	  <th scope="col">Acciones</th>
	</tr>
      </thead>
      <tbody>
	{% for item in items %}
	<tr>
	  <td>{{ item.name }}</td>
	  <td>{{ item.minTemp }}</td>
	  <td>{{ item.maxTemp }}</td>
	  <td>No habilitado</td>
	  <td>	    <a href="{{ url('_meal_show', { 'id': item.meal.id }) }}">{{item.meal.name}}</a></td>
	  <td>
	    <a class="with-tip" title="Not working yet" href="#"><img src="{{ asset('images/icons/fugue/magnifier.png') }}"/></a>
	  </td>
	</tr>
	{% else %}
	<tr><td>No item found</td><td></td><td></td></tr>
	{% endfor %}	
      </tbody>
    </table>
  </div>
  <ul class="message no-margin">
    <li>
      {{ items|length }} items found.
    </li>
  </ul>
  <div class="block-footer">
    <img src="{{ asset('images/icons/fugue/arrow-curve-000-left.png') }}" width="16" height="16" class="picto"/>
      <a class="button" href="{{ url('_meal_new') }}">Nuevo tiempo de comida</a> <a class="button" href="{{ url('_item_new') }}">Nuevo alimento</a><br/>
  </div>
</form>
</div>
</section>

{% endblock %}